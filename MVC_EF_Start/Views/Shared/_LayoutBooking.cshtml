!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/bootstrap-theme.css" rel="stylesheet"/>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/ErrorStyles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> 
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/jquery-1.10.2.intellisense.js"></script>

    <title>@ViewBag.Title - Restauracja Filip</title>

    

    <style>
        
        h1,h2,h3,h4,h5,h6 {
            text-transform:uppercase;
            font-family:Rockwell;
        }
        
       
        .btn {
            text-transform:uppercase;
            font-family:Rockwell;
        }
        #logo {
            background-color:chocolate;
            color:white;
            padding:200px 0px 300px 0px;
            margin-bottom:0px;
        }
        .glyphicon-menu-down {
            margin-top:100px;
            
            font-size:30px;
            color:white;
            border: 2px solid white;
            border-radius:30px;
            padding:10px;
            
        }
        .glyphicon-glass {
            font-size:200px;
            padding-top:50px;
        }
        #aboutus {
            background-color:darkblue;
            
            font-style:italic;
            font-size:20px;
            color:white;
            padding:250px 20px 250px 20px;
        }
        #aboutus p {
            padding:0 0 0 50px;
        }
        #menu {
            background-color:burlywood;
            padding:200px 20px 200px 20px;
            
        }
       #menu h2 {
           margin:0 0 50px 0;
       }
        #menu a {
            background:inherit;
            border:2px solid burlywood;
            color:gray;
            text-transform:uppercase;
            margin:10px 100px;
            width:50%;
        }
        #menu a:hover {
            border-radius:0;
            color:black;
            border: 2px solid black;
            
        }
        #menu .active {
            border-radius:0;
            color:black;
            border: 2px solid black;
            text-shadow:none;
            
            
        }
        
        #menu #products {
            
            font-family:'Monotype Corsiva';
        }
        #menu #products table td {
            padding:10px 50px;
        }
       
        .carousel img {
            width:600px;
            height:400px;
        }
        #gallery {
            background-color:lightgray;
            color:black;
            padding:150px 0px;
            font-size:20px;
        }
       #gallery img {
           height:250px;
           
       }
       
        .thumbnail {
            
            width:400px;
            height:350px;
            
            margin-left:auto;
            margin-right:auto;
           
            display:block;
            
        }
        #contact {
            padding:50px 50px;
            
        }
        #contact > .row {
            padding:50px 0px;
            
        }
        
        .fa {
            font-size:40px;
            margin:10px;
            
        }
        .slideanim {
            visibility:hidden;
        }
        .slide {
            animation-name:slide;
            -webkit-animation-name:slide;
            animation-duration:1s;
            -webkit-animation-duration:1s;
            visibility:visible;
        }
        @@keyframes slide {
            0% {
                opacity:0;
                transform:translateY(70%);
            }
            100% {
                opacity:1;
                transform:translateY(0%);
            }
        }
        @@-webkit-keyframes slide {
            0% {
                opacity:0;
                -webkit-transform:translateY(70%);
            }
            100% {
                opacity:1;
                -webkit-transform:translateY(0%);
            }
        }
        .row .btn {
            margin-top:20px
        }
        .row form {
            margin-top:20px
        } 
    </style>
    
</head>


<body data-spy="scroll" data-target=".navbar">

    
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
        <button type="button" class="navbar-toggle"
                data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        
            
            <div class="collapse navbar-collapse" id="myNavbar">

                @Html.ActionLink("Restaurant", "StartPage", "Home", null, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#logo">Home</a>
                    </li>

                    <li><a href="#aboutus">O nas</a></li>
                    <li><a href="#menu">Menu</a></li>
                    <li><a href="#gallery">Galeria</a></li>
                    <li><a href="#contact">Kontakt</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Strefa klienta
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Reservations", "List", "Booking")
                            </li>
                            <li>
                                @Html.ActionLink("Orders", "List", "Order")
                            </li>

                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">


                    @if (Request.IsAuthenticated) {
                        <!--li><p>Witaj HttpContext.Current.User.Identity.Name</p></li-->
                        <li class="hidden-sm">@Html.ActionLink(" Log out", "Logout", "User", null, new { @class = "glyphicon glyphicon-log-out" })</li>
                        <li class="visible-sm">@Html.ActionLink(" ", "Logout", "User", null, new { @class = "glyphicon glyphicon-log-out" })</li>
                    }
                    else {
                        <li class="hidden-sm">@Html.ActionLink(" Rejestracja", "Register", "User", null, new { @class = "glyphicon glyphicon-user" })</li>
                        <li class="hidden-sm">@Html.ActionLink(" Logowanie", "Login", "User", null, new { @class = "glyphicon glyphicon-log-in" })</li>
                        <li class="visible-sm">@Html.ActionLink(" ", "Register", "User", null, new { @class = "glyphicon glyphicon-user" })</li>
                        <li class="visible-sm">@Html.ActionLink(" ", "Login", "User", null, new { @class = "glyphicon glyphicon-log-in" })</li>

                    }
                </ul>
            </div>
        </div>
    </nav>


    <div style="padding-top:50px">
        
        @RenderBody()
    </div>
   

    <script>
        $(document).ready(function () {

            $(".navbar a, #logo a").click(function (event) {

                if (this.hash != "") {

                    event.preventDefault();

                    var hash = this.hash;

                    $('html,body').animate({
                        scrollTop: $(hash).offset().top
                    }, 900, function () {

                        window.location.hash = hash;
                    });
                }
            });

            $(window).scroll(function () {
                $(".slideanim").each(function () {
                    var pos = $(this).offset().top;
                    var winTop = $(window).scrollTop();
                    if (pos < winTop + 600) {
                        $(this).addClass("slide");
                    }
                });
            });
        })
    

    $(document).ready(function () {
        $("#menu .btn-group a,button:not(.dropdown-toggle)").click(function () {

            $("#menu a,button").attr("class", function (i, origValue) {
                return origValue.replace(" active", "");
            });

            $(this).attr("class", function (i, origValue) {
                return origValue + " active";
            });

            var link = $(this).text();

            link = link.replace(" ", "_");


            $.get(link, function (data, status) {

                $("#products").html(data);

            });
        });
    });

    </script>
</body>
</html>
